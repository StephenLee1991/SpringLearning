<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	
	<!-- 指定作用域 -->
	<!-- 
		scope:用来指定作用域，缺省值是
		singleton(单例，即只会创建一个对象)，
		如果值是prototype(每调用一次getBean方法，就会
			创建一个新的对象)。
		lazy-init:如果值为true,表示延迟加载。
	 -->
	<bean id="t1" class="basic.Teacher" lazy-init="true"/>
	<bean id="t2" class="basic.Teacher" scope="prototype" lazy-init="false"/>
	
	<!-- 指定初始化方法和销毁方法 -->
	<!-- 
		init-method:指定初始化方法名。
		destroy-method:指定销毁方法名。
		注意：销毁方法只对作用域为singleton
		的bean有效。
	 -->
	<bean id="ms1" class="basic.MessageService" init-method="init" destroy-method="destroy"/>
	
	
	
</beans>